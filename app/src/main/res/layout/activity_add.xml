<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kimanikogi.gry.ADD">

    <TextView
        android:text="NAME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/nametxt" />

    <TextView
        android:text="QUANTITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nametxt"
        android:layout_marginTop="72dp"
        android:id="@+id/quantitytxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="quantity"
        android:ems="10"
        android:id="@+id/quantityedtx"
        android:layout_alignBottom="@+id/quantitytxt"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="23dp"
        android:layout_marginEnd="23dp"
        android:hint="quantity" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/nameedtx"
        android:hint="product name"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/quantityedtx"
        android:layout_alignStart="@+id/quantityedtx" />

    <TextView
        android:text="BP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/quantitytxt"
        android:layout_marginTop="89dp"
        android:id="@+id/bptxt"
        android:layout_alignRight="@+id/nametxt"
        android:layout_alignEnd="@+id/nametxt" />

    <TextView
        android:text="SP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bptxt"
        android:layout_alignLeft="@+id/bptxt"
        android:layout_alignStart="@+id/bptxt"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="89dp"
        android:id="@+id/sptxt" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="bp"
        android:ems="10"
        android:layout_above="@+id/sptxt"
        android:layout_alignLeft="@+id/quantityedtx"
        android:layout_alignStart="@+id/quantityedtx"
        android:id="@+id/bpedtx"
        android:hint="buying price" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="sp"
        android:ems="10"
        android:layout_alignBottom="@+id/sptxt"
        android:layout_alignLeft="@+id/bpedtx"
        android:layout_alignStart="@+id/bpedtx"
        android:id="@+id/spedtx"
        android:hint="selling price" />

    <Button
        android:text="ADD"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/sptxt"
        android:layout_alignLeft="@+id/sptxt"
        android:layout_alignStart="@+id/sptxt"
        android:layout_marginTop="43dp"
        android:id="@+id/addbtn"/>
        <!--android:background="@drawable/A" -->

</RelativeLayout>
